@page
@model BeeBlog.Web.Pages.Admin.Posts.ListModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>List of posts</h1>
    </div>
</div>

@if(Model.BlogPosts != null && Model.BlogPosts.Any())
{
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td> </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.BlogPosts)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Heading</td>
                        <td><a href="/admin/posts/edit/@item.Id">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container">
        <p>No post were found</p>
    </div>
}


